{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, //original: true
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, //original: true
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* My Settings */
    "outDir": "./dist/app",
    "rootDir": "./src/app",
    "composite": true
  },
  "include": ["src/app/**/*"]
}
