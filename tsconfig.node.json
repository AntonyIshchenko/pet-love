{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, //original: true
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, //original: true

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* My Settings */
    "composite": true
  },
  "include": ["vite.config.ts"]
}
